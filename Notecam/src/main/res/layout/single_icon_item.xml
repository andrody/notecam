<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:id="@+id/grid_back">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/icon_image"
            android:layout_gravity="center"
            android:src="@drawable/lab" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="9dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/paid"
                android:background="@drawable/ic_action_del_red2"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tick_icon"
                android:background="@drawable/ic_tick_green"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:visibility="gone"></FrameLayout>

        </LinearLayout>

        <!--ImageView
            android:src="@drawable/ma"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="18dp"
            android:paddingTop="30dp"
            android:paddingLeft="15dp"
            android:background="@drawable/color_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/letra_inicial_image"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" /-->
    </FrameLayout>

</RelativeLayout>