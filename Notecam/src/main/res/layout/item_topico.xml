<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_content"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="left|top"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="50dp"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:id="@+id/tag_labels"
                android:src="@drawable/ic_action_labels"
                android:layout_gravity="center"
                android:visibility="visible" />

            <CustomViews.CustomCheckBox
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/checkbox"
                android:layout_gravity="center"
                android:visibility="gone"
                android:focusableInTouchMode="false"
                android:longClickable="false"
                android:focusable="false"
                android:layout_marginRight="10dp"
                android:checked="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:text="Logaritmos"
                    android:id="@+id/nome_topico"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:maxWidth="175dp" />

                <TextView
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:text="10 fotos"
                    android:id="@+id/numero_fotos_topico"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:maxWidth="175dp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="100"></FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="30dp"
                    android:id="@+id/seta_direita"
                    android:src="@drawable/ic_seta_direita"
                    android:layout_marginRight="20dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout><![CDATA[









            />




]]>
</FrameLayout>



