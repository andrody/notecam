<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome da Matéria"
                    android:id="@+id/textView"
                    android:layout_marginTop="30dp"
                    android:singleLine="true"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText_subject"
                    android:singleLine="true"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:focusable="true"
                    android:background="@drawable/rect_text_edit"
                    android:textColor="@color/darker_text_color"
                    android:textCursorDrawable="@null"
                    android:padding="15dp" />


                <!--HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/horizontalScrollView"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="5dp"
                            android:background="@color/blue">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/red">
                            </FrameLayout>
                        </FrameLayout>
                    </LinearLayout>

                </HorizontalScrollView-->


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nova aula"
                    android:id="@+id/button_addClass"
                    android:layout_gravity="center_horizontal|left"
                    android:layout_marginTop="35dp"
                    android:textSize="18dp"
                    android:focusable="true"
                    android:background="@drawable/custom_btn_flat_blue"
                    android:clickable="false"
                    android:orientation="horizontal"
                    android:paddingLeft="17dp"
                    android:paddingRight="17dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imageView"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_background"
                        android:adjustViewBounds="false"
                        android:src="@drawable/ic_action_new_azul" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="nova aula"
                        android:id="@+id/textView2"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>


            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:layout_marginTop="10dp"
                android:focusable="false"
                android:focusableInTouchMode="true" />

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/btn_criar_materia"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/custom_btn_flat_blue"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Criar Matéria"
            android:id="@+id/text_criar_materia"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20dp" />
    </FrameLayout>


</FrameLayout>
