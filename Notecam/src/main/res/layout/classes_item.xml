<?xml version="1.0" encoding="utf-8"?>
        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/row_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:id="@+id/linearLayout">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|left"
            android:id="@+id/frameLayout2" >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox_subject"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/sphere_icon"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:focusable="true"
            android:id="@+id/sphere"
            android:layout_marginTop="-3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="F"
                android:id="@+id/sphere_letra"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:layout_gravity="center" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/class_number"
                    android:layout_gravity="center_horizontal"
                    android:enabled="true"
                    android:textColor="#2b8464"
                    android:gravity="fill_vertical"
                    android:textStyle="normal"
                    android:textSize="24dp"
                    android:text="class 1"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/class_name"
                    android:layout_gravity="center_horizontal"
                    android:enabled="true"
                    android:textColor="#353535"
                    android:gravity="fill_vertical"
                    android:textStyle="normal"
                    android:textSize="24dp"
                    android:text="subject" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#6c6c6c"
                android:id="@+id/classesOn"
                android:singleLine="false"
                android:text="Monday"
                android:layout_marginTop="-9dp"
                android:textSize="17dp" />

        </LinearLayout>
    </LinearLayout><![CDATA[









            />




]]>
</FrameLayout>



