<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/change_topico"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical|right"
        android:textColor="@color/text_color"
        android:background="@color/black"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:minWidth="250dp"
        android:layout_marginLeft="10dp"
        android:alpha="0.5">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_labels"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Matrizes Compostas"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:id="@+id/nome_topico"
            android:singleLine="true"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_expand"
            android:layout_gravity="center_vertical|right" />
    </LinearLayout>

    <CustomViews.FlashCheckBox
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right|top"
        android:src="@drawable/ic_action_flash_off"
        android:cropToPadding="false"
        android:padding="27dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:baselineAlignBottom="false"
        android:adjustViewBounds="false"
        android:id="@+id/change_flash"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/camera_circulo"
        android:src="@drawable/camera_takepicture_background"
        android:cropToPadding="false"
        android:padding="6dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:baselineAlignBottom="false"
        android:adjustViewBounds="false"
        android:layout_centerHorizontal="true"
        android:alpha="0.8"
        android:id="@+id/take_picture" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/ic_action_labels_camera"
        android:cropToPadding="false"
        android:padding="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:baselineAlignBottom="false"
        android:adjustViewBounds="false"
        android:id="@+id/go_to_topicos" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/ic_action_collection"
        android:cropToPadding="false"
        android:padding="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:baselineAlignBottom="false"
        android:adjustViewBounds="false"
        android:id="@+id/go_to_materias" />

</RelativeLayout>