<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <!--stroke android:width="1dip" android:color="#b7b9ac" /-->
            <gradient  android:angle="-90"  android:startColor="#27ae60" android:endColor="@color/green"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <!--stroke android:width="1dip" android:color="#b7b9ac" /-->
            <solid  android:color="#27ae60"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <!--stroke android:width="1dip" android:color="#b7b9ac" /-->
            <gradient  android:angle="-90"  android:startColor="@color/green" android:endColor="@color/green" />
        </shape>
    </item>
</selector>